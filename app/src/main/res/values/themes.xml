<resources>
    <!-- Base application theme. -->
    <style name="Theme.Spectrum" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/green_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/dark</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>

    <style name="Theme.Spectrum.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="listPreferredItemHeightSmall">40dp</item>
        <item name="radioButtonStyle">@style/radio_button_style</item>
    </style>
</resources>